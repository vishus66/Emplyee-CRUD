{{>header}}
<title>Crud APP | Home</title>
{{>navbar}}

<div class="mid-section">
     <div class="container">
          <h5 class="background text-light text-center p-2 my-2">Employee Record</h5>
          {{#if error}}
          <div class="text-center p-5">
               <h1 class="text-danger">{{error}}</h1>
          </div>
          {{else}}
          <div class="table-responsive">
               <table class="table table-bordered table-hover">
               <thead>
                    <tr>
                         <th>Id</th>
                         <th>Name</th>
                         <th>Designation</th>
                         <th>Salary</th>
                         <th>City</th>
                         <th>State</th>
                         <th></th>
                         <th></th>
                    </tr>
               </thead>
               <tbody>
                    {{#each data}}
                    <tr>
                         <td>{{_id}}</td>
                         <td>{{name}}</td>
                         <td>{{designation}}</td>
                         <td>{{salary}}</td>
                         <td>{{city}}</td>
                         <td>{{state}}</td>
                         <td><a href="/edit/{{_id}}"><i class="bi bi-pen"></i></a></td>
                         <td><a href="/delete/{{_id}}"><i class="bi bi-trash text-danger"></i></a></td>
                    </tr>
                    {{/each}}
               </tbody>
          </table>
          </div>
          {{/if}}
     </div>
</div>

{{>footer}}